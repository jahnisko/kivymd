BoxLayout:
    orientation:'vertical'
    MDToolbar:
        title: 'Bottom navigation'
        md_bg_color: .8, .2, .2, 1
        specific_text_color: 1, 1, 1, 1
    MDBottomNavigation:
        id: navigation
        panel_color: .8, .8, .4, 1
        MDBottomNavigationItem:
            name: 'screen 0'
            text: 'Hlavní'
            icon: 'home'
            MainScreen:
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'BMI'
            icon: 'text'
            TextScreen:
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Seznam'
            icon: 'card-bulleted'
            FormScreen:
        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Tabulka'
            icon: 'grid'
            TableScreen:

<TextScreen>:
    name: 'textscreen'
    FloatLayout:
        MDLabel:
            id: label
            size: self.size
            size_hint: (.5, .1)
            pos_hint: {'center_x': .5, 'center_y': .2}
            font_style: 'H5'
            canvas.before:
                Color:
                    rgba: 0, .5, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'center_y': .7}
            height: self.minimum_height
            spacing: 10

            MDTextField:
                id: vaha
                input_filter: 'float'
                hint_text: "Zadejte svou váhu"
                mode: 'fill'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: 0.1
            pos_hint: {'center_x': .5, 'center_y': .8}
            height: self.minimum_height
            spacing: 10

            MDTextField:
                id: vyska
                input_filter: 'float'
                hint_text: "Zadejte svou výšku"
                mode: 'fill'

        MDRaisedButton:
            text: "Vypočítej"
            md_bg_color: 0.4, 0.4, 0.4, 1
            pos_hint: {'center_x': 0.17, 'center_y': .5}
            on_press:
                print("Stisknuto!")
                root.ids.label.text = str(round(float(root.ids.vaha.text) / ((float(root.ids.vyska.text)/100) ** 2), 2))
<FormScreen>
    name:'formscreen'
    PageLayout:
        MDLabel:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_style: 'H2'
            halign: 'center'
            pos_hint : {'center_y':0.85}
<TableScreen>:
    name:'tablescreen'
    PageLayout:
        MDLabel:
            text:'Table Screen'
            font_style: 'H2'
            halign: 'center'
            pos_hint: {'center_y':0.75}
<MainScreen>:
    name : 'mainscreen'
    PageLayout:
        MDLabel:
            text:'Main Screen'
            font_style : 'H2'
            halign : 'center'
            pos_hint : {'center_y':0.7}
